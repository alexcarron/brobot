{
	"name": "brobot",
	"version": "2.10.4",
	"description": "A discord bot used to enhance the experience of the LL Game Shows community",
	"main": "index.js",
	"type": "commonjs",
	"scripts": {
		"prepare": "husky",
		"validate": "npm run lint && npm run typecheck && npm run test",
		"test": "node -r ts-node/register ./node_modules/jest/bin/jest.js --runInBand --silent",
		"lint": "eslint . --ignore-path .gitignore",
		"typecheck": "tsc --noEmit",

		"build": "node -r ts-node/register build.ts",
		"build:guild": "npm run build -- --guild-commands-only",
		"build:dev": "npm run build -- --development",
		"dev:build": "npm run build:dev",
		"build:dev:global": "npm run build:dev",
		"dev:build:global": "npm run build:dev:global",
		"build:dev:guild": "npm run build:dev -- --guild-commands-only",
		"dev:build:guild": "npm run build:dev:guild",

		"dev": "nodemon --ext ts,js index.ts --development",
		"dev:deploy": "npm run build -- --development --guild-commands-only && npm run dev",
		"dev:deploy-all": "npm run build -- --development && npm run dev",

		"start": "npm run build && node -r ts-node/register index.ts",
		"start:dev": "npm run build:dev && npm run dev",
		"dev:start": "npm run start:dev",

		"ssh": "ssh brobot"
	},
	"dependencies": {
		"@discordjs/builders": "^1.6.5",
		"@discordjs/opus": "^0.8.0",
		"@discordjs/rest": "^2.0.1",
		"@discordjs/voice": "^0.16.1",
		"@distube/ytdl-core": "^4.16.10",
		"@octokit/rest": "^19.0.7",
		"axios": "^1.2.4",
		"better-sqlite3": "^12.2.0",
		"cron": "^2.1.0",
		"discord-player": "^6.6.3",
		"discord-player-youtubei": "^1.4.6",
		"discord.io": "^2.5.3",
		"discord.js": "^14.14.1",
		"dotenv": "^16.3.1",
		"ffmpeg": "^0.0.4",
		"ffmpeg-static": "^4.2.7",
		"fluent-ffmpeg": "^2.1.3",
		"fs-extra": "^11.3.0",
		"google-tts-api": "^2.0.2",
		"jshint": "^2.13.1",
		"node-cron": "^4.2.1",
		"path": "^0.12.7",
		"play-dl": "^1.9.6",
		"request": "^2.88.2",
		"winston": "^3.1.0"
	},
	"devDependencies": {
		"@ffmpeg-installer/ffmpeg": "^1.1.0",
		"@swc/core": "^1.13.5",
		"@swc/helpers": "^0.5.17",
		"@swc/jest": "^0.2.39",
		"@types/better-sqlite3": "^7.6.13",
		"@types/cron": "^2.0.1",
		"@types/fluent-ffmpeg": "^2.1.24",
		"@types/fs-extra": "^11.0.4",
		"@types/jest": "^30.0.0",
		"@types/node": "^24.0.14",
		"@types/request": "^2.48.13",
		"@types/ws": "^8.18.1",
		"@typescript-eslint/eslint-plugin": "^8.40.0",
		"@typescript-eslint/parser": "^8.40.0",
		"esbuild-jest": "^0.5.0",
		"eslint": "^8.57.1",
		"eslint-plugin-jest": "^29.0.1",
		"eslint-plugin-jsdoc": "^51.3.4",
		"eslint-plugin-no-floating-promise": "^2.0.0",
		"eslint-plugin-promise": "^7.2.1",
		"husky": "^9.1.7",
		"jest": "^29.7.0",
		"jest-jasmine2": "^29.7.0",
		"nodemon": "^3.1.10",
		"ts-jest": "^29.4.0",
		"ts-node": "^10.9.2",
		"typescript": "^5.8.3",
		"why-so-loud-jest": "^1.1.0"
	},
	"author": "Alex Carron",
	"license": "Proprietary",
	"engines": {
		"node": ">=18"
	}
}
